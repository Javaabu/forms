{
    "name": "javaabu/forms",
    "description": "Laravel Blade components for form elements",
    "homepage": "https://github.com/Javaabu/forms",
    "license": "MIT",
    "authors": [
        {
            "name": "Arushad Ahmed",
            "email": "arushad@javaabu.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.52 || ^10.0 || ^11.0.1 || ^12.0",
        "javaabu/settings": "^1.6",
        "javaabu/helpers": "^1.60"
    },
    "require-dev": {
        "orchestra/testbench-browser-kit": "^7.0 || ^8.0 || ^9.0 || ^10.0",
        "phpunit/phpunit": "^9.5 || ^10.5 || ^11.5.3",
        "spatie/laravel-medialibrary": "^10.3.4 || ^11.4",
        "matanyadaev/laravel-eloquent-spatial": "^2.10 || ^4.5",
        "composer/semver": "^3.4"
    },
    "suggest": {
        "spatie/laravel-medialibrary": "Required for file and image components",
        "javaabu/geospatial": "Required for map components"
    },
    "autoload": {
        "psr-4": {
            "Javaabu\\Forms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Javaabu\\Forms\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Javaabu\\Forms\\FormsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
